<div class="media">
	{{if .File.Thumb}}
	<a class="media-left" href="/src/{{.File.File}}" target="_blank">
		<img class="media-object img-rounded" src="/src/{{.File.Thumb}}" alt="{{.File.Name}}">
	</a>
	{{end}}
	<div class="media-body">
		<h6 class="media-heading">
			{{if .Subject}}<span class="text-capitalize subject">{{.Subject}}</span>{{end}}
			{{if .Name}}<span class="name">{{.Name}}</span>{{end}}
			{{if .Tripcode}}<span class="tripcode">{{.Tripcode}}</span>{{end}}
			{{template "macros/capcode" .User}}
			<span class="pull-xs-right">ID #{{id2url .ID}}</span>
		</h6>
		<div class="btn-group btn-group-sm">
			{{if and (eq .ParentID 0) (eq current "list")}}<a class="btn btn-primary" href="/post/{{id2url .ID}}">Reply</a>{{end}}
			{{/* This doesn't work right for some reason.. */}}
			{{if eq $.User.ID .User.ID}}
			<a class="btn btn-warning" href="/post/{{id2url .ID}}/edit">Edit</a>
			<a class="btn btn-danger" href="/post/{{id2url .ID}}/delete">Delete</a>
			{{end}}
			{{range $tag := .Tags}}
			<a class="btn btn-secondary" href="/list/{{$tag.Name}}/1">{{$tag.Name}}</a>
			{{end}}
		</div>
		<p class="message">{{.Message}}</p>
		{{range $post := .Replies}}
		{{template "macros/post" $post}}
		{{end}}
	</div>
</div>
